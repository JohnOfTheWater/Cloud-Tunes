doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1=title
    a.button.tiny.radius(href='/')#home Home Page
    .row
      .small-12.columns
        form(action='/songs', method='post', enctype='multipart/form-data')
          fieldset#fieldset
            legend= title
            .row
              .small-3.columns
                label Title
                input(type='text', name='title', autofocus='true')
              .small-3.columns
                label Artist
                input(type='text', name='artist')
              .small-3.columns
                label Album
                input(type='text', name='album')
              .small-3.columns
                label Mp3
                input(type='file', name='mp3')
            .row
              .small-4.columns
                &nbsp;
              .small-4.columns
                &nbsp;
              .small-4.columns
                button.small.radius Insert Song

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

