doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    h1=title
    a.button.tiny.radius(href='/')#home Home Page
    input#search(type='search', placeholder='search song...', results='0', autofocus='true')
    button.tiny.radius#searchButton Search
    #controls
      a.button.tiny.radius#newAlbum(href='/albums/new') New Album
      .button.tiny.radius#delete Delete Album
    #deletePanel
      #title DELETE ALBUM
    #addPanel
      #new NEW ALBUM
      input(type='text', placeholder='title')#addTitle
      input(type='date')#addDate
      input(type='file')#file
      .button.small.radius#create Create
    #songPanel
      #close close[x]
      a.button.tiny.radius#addSong(href='/songs') Add Song
      .button.tiny.radius#delSong Remove Song
      #album Album
      #songList Songs
    #albumsList
    #searchPanel Search Result:
      #closeSearch close[x]
   #audioControls Song:
    #closeAudio close[x]
    <audio id="audio" controls="controls">
    <source src="http://10.0.0.11:4000/audios/lonesome.mp3" type="audio/wav">
    </audio>

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/mainShow.js')

